{% include '@common/common-tags.html.twig' %}
     <input type="hidden" name="tag_page" id="tag_page" value="{{ path('forum.forum_tag') }}">
     <input type="hidden" name="notag_page" id="notag_page" value="{{ path('forum.forum') }}">       
<div id="DivContentTable" style="display:table;">
    <div class="common_table_header">
        <div style="width:30%;text-align:left;">Topics</div>
        <div style="width:16%;text-align:left;">KICP Forum</div>
        <div style="width:20%;text-align:left;">Creator</div>
        <div style="width:25%;text-align:left;">Tag</div>
    </div>
 
  {% for post in posts %}
    <div class="DivContentTable_item {{ loop.index0 is odd ? 'odd' : 'even' }}" style="width:100%;">
        <div style="width:30%;float:left;display:block;"><a href="{{ path('forum.forum_view_topic', {'topic_id': post['topic_id'] }) }}">{{ post['title'] }}</a></div>
        <div style="width:17%;float:left;display:block;"><a href="{{ path('forum.forum_view_forum', {'forum_id': post['forum_id'] }) }}">{{ post['forum_name'] }}</a></div>
        <div style="width:20%;float:left;display:block;">{{ post['user_name'] }} 
            <span>{% include '@common/common-follow.html.twig'  with {contributor_id: post['user_id'], following: post['follow']}  %}</span>    
        </div>
        <div style="width:28%;float:left;display:block;"> {% include '@common/common-tags-list.html.twig' with {tags: post ['tags'] , nolable: 1}  %} </div>
    </div>
 {% endfor %}  


</div>

<div style="float:right; margin:20px;">{{ pager }}</div>