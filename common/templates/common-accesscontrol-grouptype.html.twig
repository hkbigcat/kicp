{% if items is empty  %}
<div style="padding:2px">
	<div class="access_control_header access_control_inside" Add Public Group</div>
	<div class="access_control_header" style="width:100%;display:flex;"><div class="access_control_inside" style="width:40%;">Group Name:</div>
	<div class="access_control_inside" style="width:57%;">
		<input type="text" name="pub_group_search_str" id="pub_group_search_str" value="" size="20" style="height:24px; font-size:9pt;" tabindex="1" onkeypress="return key_press_search_public_group(event); ">
	</div>
</div>
<div class="access_control_header" style="width:100%; display:flex;">
	<div class="access_control_inside" style="width:40%;">Load Group List:</div>
	<div class="access_control_inside" style="width:57%;"><a href="javascript:;" style="border-bottom:0px;" tabindex="2"><img src="{{ path('<front>') }}modules/custom/common/images/btn_load.gif" border="0" alt="Load" title="Load" onclick="get_search_public_group(jQuery('#pub_group_search_str').val(), '{{module}}', {{ record_id }})" id="loadBtn"></a></div>
</div>
{% endif %}
<div id="div_public_group" style="padding:2px;width:99%;">
{% if items is not empty  %}
	<div class="access_control_header" style="width:99%;display:flex;">
		<div class="access_control_inside" style="width:85%;">Public Group Name: {{ search_str }}</div>
		<div class="access_control_inside" style="width:15%;">Action</div>
	</div>
    {% for item in items %}
	<div style="display:inline-block;width:100%;border-bottom:1px dotted #CCCCCC;">
		<div style="width:8%;display:inline-block;vertical-align:top;"><img src="{{ path('<front>') }}modules/custom/common/images/icon_group_p.gif"></div>
		<div style="display:inline-block;width:75%;"><a id="group_member_link" href="javascript:;" onclick="displayGroupMember('group_member_P{{  item['group_id'] }}', 'P',{{  item['group_id'] }})"><span id="group_member_P{{  item['group_id'] }}">{{  item['group_name'] }}</span></a></div>
		<div style="display:inline-block;width:15%;text-align:center;vertical-align:top;"><a href="javascript:;" onclick="add_access_control('{{module}}','{{ record_id }}','P','{{  item['group_id'] }}')">Add</a></div>
	</div>
    {% endfor %}
 {% endif %}
 </div>