            <div style="width:10%;text-align:left;">&nbsp;</div>
        </div>

        {% for item in items %}
           {% if  item['cop_name'] %}
        <div id="row_{{ loop.index0 + 1 }}" class="DivContentTable_item {{ loop.index0 is odd ? 'odd' : 'even' }}">
            <div style="width:5%;float:left;display:block;">{{ loop.index0 + 1 }}</div>
            <div style="width:39%;float:left;display:block;">{{ item['cop_name'] }}</div>
            <div style="width:35%;float:left;display:block;">{{ item['display_order'] }}</div> 
            <div style="width:10;float:left;display:block;"><button class="kicp_button" onclick="self.location.href='{{ path('activities.admin_cop_item_change' , {'cop_id': item['cop_id']} ) }}'"><i class="fa-solid fa-pencil"></i> Edit</button></div>            
