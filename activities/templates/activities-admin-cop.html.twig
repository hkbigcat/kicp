                <button class="kicp_button size-2" onclick="module_item_delete('activities_cop','{{ item['cop_id'] }}')"><i class="fa-solid fa-trash-can"></i> Delete</button>
           {% endif %} 
        </div>
           {% endif %}
        {% endfor %}
    </div>
</div>

