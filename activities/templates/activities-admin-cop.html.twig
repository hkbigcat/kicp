    <div id="right_content" style="width:100%;">
    <div class="type_title">Event Management - {{group["group_name"]}}</div>
    <div style="width: 70%; text-align: right; margin-top: -50px; margin-bottom:20px; float: right;">
        <button class="kicp_button size-2" onClick="self.location.href='{{ path('activities.admin_cop_item_add' , {'cop_group_id': group['group_id']} ) }}'"><i class="fa fa-calendar-plus-o" aria-hidden="true"></i> Add COP Item</button>
