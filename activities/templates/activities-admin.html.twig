<div id="right_content" style="width:100%;">
    <div class="type_title">Event Type Management</div>
    <div class="text-right">
        <button class="kicp_button size-2" onClick="self.location.href='{{ path('activities.admin_list_add') }}'"><i class="fa fa-calendar-plus-o" aria-hidden="true"></i> Add Event Type</button>
        <button class="kicp_button size-2" onClick="self.location.href='{{ path('activities.admin_category') }}'"><i class="fa fa-calendar" aria-hidden="true"></i> COP Management</button>
        <!--button class="kicp_button size-2" onClick="self.location.href=''"><i class="fa fa-users" aria-hidden="true"></i> Non-Portal ID Management</button-->
        <!--button class="kicp_button size-2" onClick="self.location.href=''"><i class="fa fa-cogs" aria-hidden="true"></i> Reports &amp; Settings</button-->
    </div>
    {% include '@common/common-search-form.html.twig'  with {placeholder: 'Type Name'}  %}  
    <div id="DivContentTable">
        <div class="common_table_header">
            <div style="width:5%;">&nbsp;</div>
            <div style="width:36%;text-align:left;">Type Name</div>
            <div style="width:17%;text-align:left;">Order</div>
            <div style="width:23%;text-align:left;">Event</div>
            <div style="width:10%;text-align:left;">&nbsp;</div>
        </div>

        {% for item in items %}
           {% if  item['evt_type_name'] %}
        <div id="row_{{ loop.index0 + 1 }}" class="DivContentTable_item {{ loop.index0 is odd ? 'odd' : 'even' }}">
            <div style="width:5%;float:left;display:block;">{{ loop.index0 + 1 }}</div>
            <div style="width:38%;float:left;display:block;">{{ item['evt_type_name'] }}</div>
            <div style="width:16%;float:left;display:block;">{{  item['display_order'] }}</a></div>
            <div style="width:23%;float:left;display:block;"><a href="{{ path('activities.admin_event', {'type_id': item['evt_type_id'] }) }}">Event List</a></div> 
            <div style="width:10;float:left;display:block;"><button class="kicp_button" onclick="self.location.href='{{ path('activities.admin_list_change', {'evt_type_id': item['evt_type_id'] }) }}'"><i class="fa-solid fa-pencil"></i> Edit</button></div>            
            {% if item['allow_delete']  %}
                <button class="kicp_button size-2" onclick="module_item_delete('activities_list','{{ item['evt_type_id'] }}')"><i class="fa-solid fa-trash-can"></i> Delete</button>
            {% endif %}            
        </div>
           {% endif %}
        {% endfor %}
    </div>
</div>

<div style="float:right; margin:20px;">{{ pager }}</div>
{% include '@common/common-confirm-delete.html.twig'  with {module: 'event type'}  %}