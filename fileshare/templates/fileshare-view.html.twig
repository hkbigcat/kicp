   <div class="content">
     <div class="EntryContainer" style="width:20%;min-width:308px;float:left;display:inline-block;margin-right:10px;">
          {% if items['title'] is not empty %}

          <div class="entry_title">{{ items['title'] }}</div>

          <div class="entry_content" style="text-align:justify;">
               {{ items ['description'] }}
          </div>

          <div><span class="entry_subtitle" style="margin-top:15px">Folder: </span><a href="{{ path('fileshare.fileshare_content', {'folder_id': items['folder_id'] }) }}">{{ items['folder_name'] }} </a></div>
          {% include '@common/common-tags-list.html.twig' %}    
          <div><span class="entry_subtitle" style="margin-top:15px">Uploaded by: </span> {{ items['user_displayname'] }} <span>{% include '@common/common-follow.html.twig'  with {contributor_id: items['user_id'], following: items['follow']}  %}</span></div>
          <div><span class="entry_subtitle" style="margin-top:15px">Date: </span> {{ items['modify_datetime'] }}</div>
          <div id="cpRate_fileshare_{{ items['file_id'] }}" style="width:100%; margin-top:15px;">{% include '@common/common-rating.html.twig' %}</div>
          <div style="margin:20px;"><button class="kicp_button" onclick="window.open('{{ path('common.download', {'module_name': 'fileshare', 'file_id': items['file_id'] }) }}');"><i class="fa-solid fa-file-arrow-down"></i> Download</button></div>

     </div>
     
     <div style="display:inline-block; width:70%;max-width:820px;">

          <div style="margin:20px; text-align:right"><button class="kicp_button" onclick="self.location.href='{{ path('fileshare.fileshare_change', {'file_id': items['file_id'] }) }}'"><i class="fa-solid fa-pencil"></i> Edit</button></div>

          {% if slides | length %}
          <!-- Slideshow container -->
          <div class="slideshow-container">
  
               {% for slide in slides %}

                    <div class="mySlides fade">
                         <img src="{{ url('<front>') }}/system/files/fileshare/image/{{ "%06d" | format(items['file_id']) }}/{{slide}}" style="width:85%; margin-left:7%; border: 1px solid #ccc;">
                    </div>   

               {% endfor %}
        
               <!-- Next and previous buttons -->
               <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
               <a class="next" onclick="plusSlides(1)">&#10095;</a>
          </div>

               <!-- The dots/circles -->
          <div style="text-align:center">
               {% for slide in slides %}
               <span class="dot" onclick="currentSlide({{loop.index0}})"></span>
               {% endfor %}
          </div>

        {% endif %}
          <input type="hidden" name="tag_page" id="tag_page" value="{{ path('fileshare.fileshare_tag') }}">
          <input type="hidden" name="notag_page" id="notag_page" value="{{ path('fileshare.fileshare_content') }}">   
          <input type="hidden" name="selected_tag" id="selected_tag" value="">
    {% endif %}    

     </div>
     
</div>

