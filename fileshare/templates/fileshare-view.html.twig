   <div class="content">
     <div class="EntryContainer" style="width:20%;min-width:350px;float:left;display:inline-block;margin-right:10px;">
          {% if items['title'] is not empty %}

          <div class="entry_title">{{ items['title'] }}</div>

          <div class="entry_content" style="text-align:justify;">
               {{ items ['description'] }}
          </div>

          <div><span class="entry_subtitle">Folder: </span><a href="/fileshare/?folder_id={{ items['folder_id'] }}">{{ items['folder_name'] }} </a></div>
          <div><span class="entry_subtitle">Date: </span> {{ items['modify_datetime'] }}</div>
          <div style="width:100%; margin-top:10px;">{% include '@common/common-rating.html.twig' %}</div>
          {% include '@common/common-tags-list.html.twig' %}    
          <div style="margin:20px;"><button class="kicp_button" onclick="window.open('/download/fileshare/{{ items['file_id'] }}');"><i class="fa-solid fa-file-arrow-down"></i> Download</button></div>

     </div>
     
     <div style="display:inline-block; width:70%;max-width:820px;">

          <div style="margin:20px; text-align:right"><button class="kicp_button" onclick="self.location.href='../fileshare_change/{{ items['file_id'] }}'"><i class="fa-solid fa-pencil"></i> Edit</button></div>

          {% if slides | length %}
          <!-- Slideshow container -->
          <div class="slideshow-container">
  
               {% for slide in slides %}

                    <div class="mySlides fade">
                         <img src="/system/files/fileshare/image/{{ "%06d" | format(items['file_id']) }}/{{slide}}" style="width:85%; margin:0 auto; border: 1px solid #ccc;">
                    </div>   

               {% endfor %}
        
               <!-- Next and previous buttons -->
               <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
               <a class="next" onclick="plusSlides(1)">&#10095;</a>
          </div>

               <!-- The dots/circles -->
          <div style="text-align:center">
               {% for slide in slides %}
               <span class="dot" onclick="currentSlide({{loop.index0}})"></span>
               {% endfor %}
          </div>

        {% endif %}
          <input type="hidden" name="tag_page" id="tag_page" value="../fileshare_tag">
          <input type="hidden" name="notag_page" id="notag_page" value="../fileshare">   
          <input type="hidden" name="selected_tag" id="selected_tag" value="">
    {% endif %}    

     </div>
     
</div>

