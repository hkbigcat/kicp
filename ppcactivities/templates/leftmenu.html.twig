<div id="main_content">
    <div class="text-right">
    {% if user.hasPermission('activities_admin') %}
       <button class="kicp_button" onclick="self.location.href='{{ path('ppcactivities.admin_content') }}'"><i class="fa-solid fa-gear"></i>Admin</button>
    {% endif %}
        <button class="share_button" onclick="copyTextToClipboard(); mailto(11,'')"><i class="fa-solid fa-share-nodes"></i> Share</button>
    </div>
    <div class="spacer"></div>
    <ul class="submenu_container">
    {% for category in categories %}
        {% set activeclass = category['cop_id'] == cop_id?"class=active":"" %}
        <li class="topmenu_item"><a href="{{ path('ppcactivities.content.cop', {'cop_id': category['cop_id'] }) }}" {{activeclass}} id="topmenu_link_info">{{category['cop_name']}}</a></li>
    {% endfor %}        
    </ul>
</div>
<div class="homepage_div">
    {% for type in types %}
    <div class="title"><a href="{{ path('ppcactivities.content.type', {'cop_id': cop_id, 'type_id': type['evt_type_id'] }) }}">{{ type['evt_type_name'] }}</a></div>
    {% endfor %}            
</div>